{
  "schemaVersion": 1,
  "id": "enhancedcraft",
  "version": "${version}",

  "name": "EnhancedCraft",
  "description": "This is EnhancedCraft, a mod designed to add more powerful weapons and tools, new blocks, and cool mechanics, whilst still being Minecraft at its core.",
  "authors": [
    "Spectr3x"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/enhancedcraft/",
    "sources": "https://github.com/realspectr3x/enhancedcraft/"
  },

  "license": "gpl-3.0",
  "icon": "assets/enhancedcraft/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.spectr3x.enhancedcraft.EnhancedCraft"
    ],
    "client": [
      "com.spectr3x.enhancedcraft.EnhancedCraftCLIENT"
    ],
    "modmenu": [
      "com.spectr3x.enhancedcraft.ModMenuIntegration"
    ]
  },
  "mixins": [
    "enhancedcraft.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
